// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id              String        @id @default(cuid())
  slug            String        @unique
  name            String
  description     String?
  durationMinutes Int
  price           Float?
  active          Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  appointments    Appointment[]

  @@index([slug])
  @@index([active])
}

model Appointment {
  id              String   @id @default(cuid())
  serviceId       String
  service         Service  @relation(fields: [serviceId], references: [id])
  date            String   // YYYY-MM-DD format
  startTime       String   // HH:MM format (24-hour)
  endTime         String   // HH:MM format (24-hour)
  customerFirst   String
  customerLast    String
  customerEmail   String
  customerPhone   String
  notes           String?
  status          String   @default("confirmed") // confirmed, pending, cancelled, completed
  source          String   @default("booking-page") // booking-page, hero, call-section
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([date, startTime, serviceId])
  @@index([date, startTime])
  @@index([serviceId])
  @@index([status])
  @@index([customerEmail])
}

model WorkingHours {
  id        String @id @default(cuid())
  weekday   Int    // 0 = Sunday, 1 = Monday, ..., 6 = Saturday
  startTime String // HH:MM format
  endTime   String // HH:MM format
  active    Boolean @default(true)

  @@unique([weekday])
  @@index([weekday, active])
}
